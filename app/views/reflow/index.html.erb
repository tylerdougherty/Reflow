<head>
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.12.0.min.js"></script>
</head>

<div class="c1 center">
  <h1><b>Welcome to Reflow</b></h1>
  <p>A Library of Books</p>


  <input type="text" id="search" placeholder="Search for a Book" size="100">
  <p></p>

  <table id="tabledata" class="center" border="1" cellspacing="50" width="600">
      <thead>
        <th width="400"><b>Title</b></th>
        <th width="150"><b>Author</b></th>
        <th width="50"></th>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr class="searchable">
            <td width="400"><%= book.title %></td>
            <td width="150"><%= book.author %></td>
            <%if book['downloadStatus'] == 'Done' %>
              <td width="50"><%= link_to('Read', "book/#{book['id']}") %></td>
            <% else %>
              <td width="50">Downloading...</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>

<script>
    var $rows = $('tr.searchable');
    $('#search').keyup(function() {
        var val = $.trim($(this).val()).replace(/ +/g, ' ').toLowerCase();

        $rows.show().filter(function() {
            var text = $(this).text().replace(/\s+/g, ' ').toLowerCase();
            return !~text.indexOf(val);
        }).hide();
    });
</script>
