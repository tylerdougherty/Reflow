<div class="c1">

    <ul class="pager">
        <% if @hasPrevious %><li class="previous"><%= link_to 'Previous', params.merge(:page => @pageNum-1) %></li><% end %>
        <!-- TODO: add actual page number buttons here -->
        <% if @hasNext %><li class="next"><%= link_to 'Next', params.merge(:page => @pageNum+1) %></li><% end %>
    </ul>


    <p>
        <%= @currentPage.text.html_safe %>
    </p>

</div>