<div class="center">
    <button type="button" class="btn btn-default" onclick="showImage();">Image</button>
    <button type="button" class="btn btn-default" onclick="showReflow(<%= "#{params[:id]},#{@page_num}" %>);">Reflow</button>
    <button type="button" class="btn btn-default" onclick="showPlainText();">Plain Text</button>
</div>

<br />

<div id="textDiv" class="c1" style="display:block">
    <% if @spinner  %>
        <%= @current_page.text.html_safe %>

        <link href="<%= "/book/#{params[:id]}/page/#{@page_num}/css" %>" rel="stylesheet" type="text/css" />
    <% else %>
        <div class="sk-folding-cube">
            <div class="sk-cube1 sk-cube"></div>
            <div class="sk-cube2 sk-cube"></div>
            <div class="sk-cube4 sk-cube"></div>
            <div class="sk-cube3 sk-cube"></div>
        </div>
    <% end %>
</div>

<div id="imageDiv" class="c1" style="display:none">
    <img src="<%="/book/#{params[:id]}/page/#{@page_num}/image" %>" height="100%" width="100%" >
</div>