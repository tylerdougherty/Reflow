<h1>Archive.org Search</h1>
<!--<p>Try searching: https://archive.org/metadata/mobydickorwhale01melvuoft</p>-->

<%= form_tag('/archive/example', method: 'get') do %>
    <%= text_field_tag(:search, params[:search], placeholder: 'Search Internet Archive') %>
    <%= submit_tag('Search') %>
<% end %>

<% if @json %>
    <div class="results">
      <%= simple_format "<i>#{@results} search results returned</i>" %>

      <br />
      <% @docs.each do |doc| %>
        <%= simple_format "#{doc['title']} : #{doc['format']}" %>
      <% end %>
    </div>
<% end %>